@model IEnumerable<CourseApp.Models.Course>

@{
    ViewData["Title"] = "CourseList";
}

<h1>CourseList</h1>

<div class="row gy-4 my-3">
    @foreach (var course in Model)
    {
        <div class="col-sm-8 col-md-3 col-lg-3">
            <div class="card cs">
               @* <img src="@Url.Content("~/images/COURSE.jpg")" class="card-img-top">*@
                <div class="card-body detail">
                    <h5 class="card-title font-weight-bold">CourseName:  <a>@course.CourseName</a></h5>
                    <hr class="my-4" />
                    <ul class="list-unstyled list-inline d-flex justify-content-between">
                        <li class="list-inline-item me-0">
                            <h6>Course Category: </h6><h6 class="card-title font-weight-bold"> <a>@course.CourseCategory</a></h6>
                            <div class="chip me-0" font-weight-bold">Price: Rs @course.CoursePrice</div>
                        </li>
                    </ul>
                    <a asp-controller="User" asp-action="GetCourseDetail" asp-route-id="@course.CourseId" class="btn btn-primary">Add Course</a>
                </div>
            </div>
        </div>
    }
</div>